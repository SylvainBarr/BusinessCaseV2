{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="my-3 ms-3"><a href="{{ path('app_user_index') }}" class="button display-5"><i class="fa-solid fa-arrow-left-long"></i></a> {{ user.nickname }}<span class="float-end me-3">{{ include('user/_delete_form.html.twig') }}</span> </h1>


    <table class="table table-hover table-striped align-middle table-dark">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>ProfilePicture</th>
                <td>{{ user.profilePicture }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ user.birthDate ? user.birthDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{% if user.admin %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>




{% endblock %}
