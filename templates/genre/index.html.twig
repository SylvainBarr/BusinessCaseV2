{% extends 'base.html.twig' %}

{% block title %}Liste des genres{% endblock %}

{% block body %}
<div class="container d-flex flex-row justify-content-between">
    <h1>Liste des genres</h1>
    <a href="{{ path('app_genre_new') }}" class="m-3 btn btn-outline-light"><i class="fa-solid fa-plus fa-xl"></i> Nouveau</a>
</div>

    <table class="table table-hover table-striped align-middle table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>{{ genre.slug }}</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="button"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="button"><i class="fa-solid fa-pen"></i></a>
                        {{ include('genre/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="navigation d-flex justify-content-center my-2">
        {{ knp_pagination_render(genres) }}
    </div>
{% endblock %}
