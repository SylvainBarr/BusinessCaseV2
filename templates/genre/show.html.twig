{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1 class="my-3 ms-3"><a href="{{ path('app_genre_index') }}" class="button display-5"><i class="fa-solid fa-arrow-left-long"></i></a>{{ genre.name }}<span class="float-end me-3 d-flex flex-row"><a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="button"><i class="fa-solid fa-pen"></i></a>{{ include('genre/_delete_form.html.twig') }}</span> </h1>

    <table class="table table-hover table-striped align-middle table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ genre.slug }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
