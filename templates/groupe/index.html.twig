{% extends 'base.html.twig' %}

{% block title %}Liste des groupes{% endblock %}

{% block body %}
    <div class="container d-flex flex-row justify-content-between">
        <h1>Liste des groupes</h1>
        <a href="{{ path('app_groupe_new') }}" class="m-3 btn btn-outline-light"><i class="fa-solid fa-plus fa-xl"></i> Nouveau</a>
    </div>
    <table class="table table-hover table-striped align-middle table-dark">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.id }}</td>
                <td>{{ groupe.name }}</td>
                <td>{{ groupe.slug }}</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('app_groupe_show', {'id': groupe.id}) }}" class="button"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}" class="button"><i class="fa-solid fa-pen"></i></a>
                        {{ include('groupe/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="navigation d-flex justify-content-center my-2">
        {{ knp_pagination_render(groupes) }}
    </div>
{% endblock %}
