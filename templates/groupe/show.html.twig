{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}
    <h1 class="my-3 ms-3"><a href="{{ path('app_groupe_index') }}" class="button display-5"><i class="fa-solid fa-arrow-left-long"></i></a>{{ groupe.name }}<span class="float-end me-3 d-flex flex-row"><a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}" class="button"><i class="fa-solid fa-pen"></i></a>{{ include('groupe/_delete_form.html.twig') }}</span> </h1>

    <table class="table table-hover table-striped align-middle table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ groupe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ groupe.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ groupe.slug }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
