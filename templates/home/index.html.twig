{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.dashboard.title'|trans}}{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-evenly">
        <div class="col-lg-5 col-sm-12">
            <h2 class="my-3">{{ 'admin.dashboard.lastUsers'|trans}}</h2>
            <table class="table table-striped table-hover table-dark table-dashboard align-middle">
                <thead>
                    <tr>
                        <th>{{ 'user.table.email'|trans}}</th>
                        <th>{{ 'user.table.nickname'|trans}}</th>
                        <th>{{ 'user.table.createdAt'|trans}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in lastUsers %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{{ user.nickname }}</td>
                            <td>{{ user.createdAt|date('d-m-Y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-5 col-sm-12">
            <h2 class="my-3">{{ 'admin.dashboard.lastNfts'|trans}}</h2>
            <table class="table table-striped table-hover table-dark table-dashboard align-middle">
                <thead>
                <tr>
                    <th>{{ 'nft.table.name'|trans}}</th>
                    <th>{{ 'nft.table.groupe'|trans}}</th>
                    <th>{{ 'nft.table.dateDrop'|trans}}</th>
                </tr>
                </thead>
                <tbody>
                {% for nft in lastNfts %}
                    <tr>
                        <td>{{ nft.name }}</td>
                        <td>{{ nft.groupe.name }}</td>
                        <td>{{ nft.dateDrop|date('d-m-Y') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
